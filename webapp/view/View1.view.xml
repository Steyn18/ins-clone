<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:suite="sap.suite.ui.commons" controllerName="progressindicator.controller.View1" displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel id="idInsta" class="center" height="600px" width="450px">
                <VBox id="vbox2" width="400px">
                        <Text id="headerText" width="100%" text="Instagram" class="sapUiSmallMargin instagram-text"/>
                    <Input id="userName" placeholder="Phone number, username or email address" width="100%"/>
                    <Input id="password" type="Password" placeholder="Password" showValueHelp="true" valueHelpIconSrc="sap-icon://hide" valueHelpRequest="onValueHelp" liveChange="onPassword" width="100%"/>
                    <Button id="login" text="Log in" press="onLogin" class="center-button" width="100%"/>
                    <Text id="textOr" text="-----------------------------OR--------------------------" class="center" width="100%" />

                    <HBox id="_IDGenHBox1" class="center">
                        <core:Icon src="sap-icon://group" id="idicon" press="handlelink" class="sapUiSmallMargin"/>
                    <items>
                        <Link xmlns="sap.m" text="Log in with Facebook" id="idLink" press="handlelink"/>
                    </items>
                    </HBox>
                <items>
                    <Link xmlns="sap.m" text="Forgotten your password?" id="idLinkForgot" class="center" press="handleFBpage"/>
                </items>
                </VBox>
            </Panel>
        </content>
    </Page>
</mvc:View>